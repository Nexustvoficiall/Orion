{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "*.js",
    "api/**/*.js",
    "public/**/*.js"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/**/*"
  ]
}
